---
extends: default
rules:
  braces:
    max-spaces-inside: 1
  comments-indentation: false
  comments:
    min-spaces-from-content: 1
  octal-values:
    forbid-explicit-octal: true
    forbid-implicit-octal: true
  line-length:
    max: 400
    level: warning
  truthy:
    allowed-values:
      - 'true'
      - 'false'
    check-keys: true
    ignore: |
      .github/workflows
