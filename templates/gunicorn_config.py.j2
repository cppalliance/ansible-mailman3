"""Gunicorn configuration for Mailman3
"""
import os

workers = 5
threads = 4
max_requests = 1200
max_requests_jitter = 50

# ensure settings module name doesn't include invalid characters
_django_settings_module = os.environ.get("DJANGO_SETTINGS_MODULE")
if _django_settings_module:
    os.environ["DJANGO_SETTINGS_MODULE"] = _django_settings_module.replace(".", "_").replace("-", "_")
